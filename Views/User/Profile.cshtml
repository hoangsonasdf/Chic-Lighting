@{
    ViewData["Title"] = "Profile";
}
@model projectchicandlighting.ModelViews.Userr.ProfileModel
<div id="cart">
    <div class="d-flex flex-column align-items-center my-5">
        <div class="section-title">
            <h2>PROFILE</h2>
        </div>
        <div class="container">
            <div>
                <label>FIRST NAME</label>
                <input asp-for="User.FirstName" class="form-control" type="text" placeholder="@Model.User.FirstName" readonly>
            </div>
            <div>
                <label>LAST NAME</label>
                <input asp-for="User.LastName" class="form-control" type="text" placeholder="@Model.User.LastName" readonly>
            </div>
            <div>
                <label>ADDRESS</label>
                <input asp-for="User.Address" class="form-control" type="text" placeholder="@Model.User.Address" readonly>
            </div>
            <div>
                <label>EMAIL</label>
                <input asp-for="User.Email" class="form-control" type="text" placeholder="@Model.User.Email" readonly>
            </div>
            <div>
                <label>PASSWORD</label>
                <input class="form-control" type="text" placeholder="************** Click here to change password" id="password" readonly>
            </div>
            <div id="changepass">
                <form method="POST" asp-controller="User" asp-action="Change">
                    <div class="mb-3 mt-3">
                        <label asp-for="Request.CurrentPassword">Current Password</label>
                        <input asp-for="Request.CurrentPassword" type="password" id="currentpass" class="form-control" name="CurrentPassword">
                        <span asp-validation-for="Request.CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Request.NewPassword">New Password</label>
                        <input asp-for="Request.NewPassword" type="password" id="newpass" class="form-control" name="NewPassword">
                        <span asp-validation-for="Request.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Request.ConfirmPassword">Confirm Password</label>
                        <input asp-for="Request.ConfirmPassword" type="password" id="newpass" class="form-control" name="ConfirmPassword">
                        <span asp-validation-for="Request.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-outline-dark rounded-0" id="submitchange" value="Submit">
                    </div>
                </form>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (ViewBag.Response != null)
            {
                <span class="text-success">@ViewBag.Response</span>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#changepass").hide();
    });

    $("#password").click(function () {
        $("#changepass").show();
    })

</script>
